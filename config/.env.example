# Screener: min 24h volume (default 300000)
MIN_VOLUME=300000
# Run scan every N seconds (default 3600 = 1 hour)
SCAN_INTERVAL=3600
# Swing (Crypto View 1.0: pivot length, lookback bars)
SWING_PIVOT_LEN=5
SWING_LOOKBACK=30
SWING_TIMEFRAME=4h
# Deviation (V3.0): bars to look back for deviation candle on 4H/1H (default 4)
DEV_LOOKBACK_BARS=4

# Required: Telegram (bot sends Top 10 table when it finds sweeps)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Optional: MEXC (for private endpoints; not required for public data)
MEXC_API_KEY=
MEXC_API_SECRET=

# Paths (relative to project root)
DATA_DIR=data
LOGS_DIR=logs