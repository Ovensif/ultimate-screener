# Screener: min 24h volume (default 300000)
MIN_VOLUME=300000
# Run scan every N seconds (default 600 = 10 minutes)
SCAN_INTERVAL=300
# Swing / liquidity sweep (aec9c8e: pivot bars left/right)
SWING_PIVOT_LEFT=7
SWING_PIVOT_RIGHT=3
SWING_TIMEFRAME=4h

# Required: Telegram (bot sends Top 10 table when it finds sweeps)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Optional: MEXC (for private endpoints; not required for public data)
MEXC_API_KEY=
MEXC_API_SECRET=

# Paths (relative to project root)
DATA_DIR=data
LOGS_DIR=logs
